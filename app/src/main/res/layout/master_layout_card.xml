<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_steps="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">




    <TextView
        android:id="@+id/txtIng"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:text="TextView" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_steps"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_steps:cardCornerRadius="@dimen/cardrecipe_radius">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/recipeSteps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:paddingLeft="@dimen/recipetitle_padding"
                android:paddingRight="@dimen/recipetitle_padding"
                android:paddingTop="@dimen/recipetitle_padding"
                android:textAlignment="center"
                android:textColor="@color/recipetitle"
                android:textSize="@dimen/recipetitle" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>