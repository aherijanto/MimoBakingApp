<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        recipe_main_card:cardCornerRadius="@dimen/cardrecipe_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/recipetcover_height"
                android:id="@+id/recipemainthumb"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:layout_below="@+id/recipemainthumb"
                android:paddingLeft="@dimen/recipetitle_padding"
                android:paddingRight="@dimen/recipetitle_padding"
                android:paddingTop="@dimen/recipetitle_padding"
                android:textColor="@color/recipetitle"
                android:textSize="@dimen/recipetitle"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/userrating"
                android:layout_below="@+id/title"
                android:paddingLeft="@dimen/recipetitle_padding"
                android:paddingRight="@dimen/recipetitle_padding"
                android:paddingBottom="@dimen/recipe_paddingbottom"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/reciperating"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>