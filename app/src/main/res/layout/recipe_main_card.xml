<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:adjustViewBounds="true">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:layout_weight="0.10"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/cardrecipe_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="232dp">

            <ImageView
                android:id="@+id/imageRecipe"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/recipename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageRecipe"
                android:paddingLeft="@dimen/recipetitle_padding"
                android:paddingRight="@dimen/recipetitle_padding"
                android:paddingTop="@dimen/recipetitle_padding"
                android:textAlignment="center"
                android:textColor="@color/recipetitle"
                android:textSize="@dimen/recipetitle"

                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>