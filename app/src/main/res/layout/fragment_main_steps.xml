<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="testing for ingridients"
        android:paddingLeft="@dimen/recipetitle_padding"
        android:paddingRight="@dimen/recipetitle_padding"
        android:paddingTop="@dimen/recipetitle_padding"
        android:textAlignment="center"
        android:textColor="@color/recipetitle"
        android:textSize="@dimen/recipetitle"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

</LinearLayout>